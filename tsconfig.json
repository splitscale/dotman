{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2017"],
    "module": "ES2022",
    "rootDir": "./lib",
    "moduleResolution": "Node",
    "types": ["node"],
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
